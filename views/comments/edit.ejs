
<%- include("../partials/header") %>
<style>
	.container{max-width: 450px;
    padding: 0;
    margin: 30px auto 0;
    background: none;
	}
	body{
		font-family:Poppins,sans-serif;
	}
	h2{
		font-weight:600;
		text-align:center;
	}
	.form-control{
		border-radius:30px;
		height:50px;
	}
	.btn{
		border-radius:20px;
	}
 </style>

<h2 class="py-3 py-md-4">
	Edit a Comment to <%= campground.name %> 
</h2>
<div class="container" >
	
<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
	<div class="form-group">
		<input  class="form-control" type="text" name="text" value="<%= comment.text %>">
	</div>
	
	<div class="form-group" >
		<button class="btn btn-lg btn-primary btn-block">
		Update
	</button>
	</div>
</form>
<a id="back" href="/campgrounds">Go Back</a>

</div>

<%- include("../partials/footer") %>

