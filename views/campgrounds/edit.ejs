<%- include("../partials/header") %>
<style>
	.container{max-width: 450px;
    padding: 0;
    margin: 30px auto 0;
    background: none;
	}
	body{
		font-family:Poppins,sans-serif;
	}
	h2{
		font-weight:600;
	}
	.form-control{
		border-radius:30px;
		height:50px;
	}
	.btn{
		border-radius:20px;
	}
	.form-label {
    color: #868e96;
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .1em;
	}
</style>

<div class="container" >
	<h2 class="py-4">
	Edit <%= campground.name %> 
</h2>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<input  class="form-control" type="text" name="name" value="<%= campground.name %>">
	</div>
	<div class="form-group" >
		<label for="image" class="form-label">Image</label>
        <input type="file" id="image" name="image" accept="image/*">
	</div>
	<div class="form-group">
		<input  class="form-control" type="text" name="description" value="<%= campground.description %>">
	</div>
	<div class="form-group" >
		<input  class="form-control" type="number" name="price" value="<%= campground.price          %>" min="0.01" step="0.01">
	</div>
	<div class="form-group" >
		<button class="btn btn-lg btn-primary btn-block">
		Update
	</button>
	</div>
</form>
<a id="back" href="/campgrounds">Go Back</a>

</div>

<%- include("../partials/footer") %>
