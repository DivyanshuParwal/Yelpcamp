<%- include("../partials/header") %>
<style>
	.mb-5 {
		margin-bottom:0!important;
	}
	.alert{
		margin-top:1rem;
	}
	.jumbotron{
		background-color:beige;
	}
	
</style>


	<header class="jumbotron">
   <div class="container">
		<h1 class="display-4">Welcome to Yelpcamp!</h1>
  <p class="lead">View our hand-picked campgrounds from all over the world</p>
  <hr class="my-4">
  
  <p class="lead">
    <a class="btn btn-secondary btn-lg" href="/campgrounds/new" role="button">Add new campground</a>
  </p>
</div>
</header>
   
  <div class="container">
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<% for(var i=0;i<campgrounds.length;i++){ %>
		<div class="col-md-3 col-sm-6">
	<div class="card" >
  <img src="<%= campgrounds[i].image %>" class="card-img-top" >
  <div class="card-body">
    <h5 class="card-title"><%= campgrounds[i].name   %></h5>
    
    <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-outline-secondary">More Info</a>
  </div>
</div>
		</div>
	<% } %>
</div>

</div>
	




<%- include("../partials/footer") %>