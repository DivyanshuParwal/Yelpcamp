<%- include("../partials/header") %>
<style>
	.container{max-width: 450px;
    padding: 0;
    margin: 30px auto 0;
    background: none;
	}
	body{
		font-family:Poppins,sans-serif;
	}
	h2{
		font-weight:600;
		text-align:center;
	}
	.form-control{
		border-radius:30px;
		height:50px;
	}
	.btn{
		border-radius:20px;
	}
	.form-label {
    color: #868e96;
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .1em;
	}
 </style>
<div class="row">
	<div class="col-md-12">
		<h2 class="py-3 py-md-4">
	Create a New Campground
</h2>
<div class="container" >
<form action="/campgrounds" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<input  class="form-control" type="text" name="name" placeholder="name">
	</div>
	<div class="form-group" >
		<label for="image" class="form-label">Image</label>
        <input type="file" id="image" name="image" accept="image/*" required>
	</div>
	<div class="form-group">
		<input  class="form-control" type="text" name="description" placeholder="description">
	</div>
	<div class="form-group" >
		<input  class="form-control" type="number" name="price" placeholder="price"                  min="0.01" step="0.01">
	</div>
	<div class="form-group" >
		<button class="btn btn-lg btn-primary btn-block">
		Submit
	</button>
	</div>
</form>
<a id="back" href="/campgrounds">Go Back</a>

</div>
	</div>
</div>


<%- include("../partials/footer") %>
