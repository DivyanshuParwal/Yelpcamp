<%- include("partials/header"); %>

<style>
  .form-label {
    color: #868e96;
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .1em;
	}
	label {
    display: inline-block;
    margin-bottom: .5rem;
      }
	h2 {
	margin-bottom: .5rem;
    font-family: Poppins,sans-serif;
    font-weight: 700;
    line-height: 1.3;
	}
	.form-text {
    display: block;
    margin-top: .25rem;
	font-weight:400;	
}
	.btn {
