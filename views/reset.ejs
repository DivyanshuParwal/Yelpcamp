<%- include("partials/header"); %>
<style>
	.container{max-width: 450px;
    padding: 0;
    margin: 30px auto 0;
    background: none;
	}
	body{
		font-family:Poppins,sans-serif;
	}
	h1{
		font-weight:800;
		text-align:center;
	}
	.form-control{
		border-radius:30px;
		height:50px;
	}
	.btn{
		border-radius:20px;
	}
	.form-label {
    color: #868e96;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: .1em;
	}
	label {
    display: inline-block;
    margin-bottom: .5rem;
      }
 </style>

<h1 class="py-3 py-md-4">
	Reset Password
</h1>
<div class="container" >

	<form action="/reset/<%= token %>" method="POST">
		  
		  <div class="form-group">
		    <label for="password" class="form-label">New Password</label>
		    <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control">
		  </div>
		  <div class="form-group">
		    <label for="confirm" class="form-label">Confirm Password</label>
		    <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control">
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary btn-lg btn-block">Update Password</button>
		  </div>
		</form>
</div>



<%- include("partials/footer"); %>
